{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./netlify/functions",
        "rootDir": "./netlify",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "netlify/**/*"
    ],
    "exclude": [
        "node_modules",
        "tippool-backend",
        "tippool-app"
    ]
}